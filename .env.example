# BeQ Project Environment Configuration
# This file contains all environment variables for the BeQ application stack
# Copy this file to .env and fill in your actual values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=BeQ Orchestrator Service
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8000
RELOAD=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Generate a secure random key for JWT tokens
# You can generate one with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-super-secure-secret-key-here-change-this-in-production

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
# PostgreSQL Database URL
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://beq:beq@localhost:5432/beq_orchestrator
DATABASE_ECHO=true

