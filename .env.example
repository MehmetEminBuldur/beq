RAG_SERVICE_URL=http://localhost:8002
CALENDAR_SERVICE_URL=http://localhost:8003
USER_PROFILE_SERVICE_URL=http://localhost:8004

# =============================================================================
# SERVICE DISCOVERY & HEALTH CHECKS
# =============================================================================
SERVICE_DISCOVERY_ENABLED=false
HEALTH_CHECK_INTERVAL_SECONDS=30

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# =============================================================================
# CACHING
# =============================================================================
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Optional: Get from Sentry.io
# SENTRY_DSN=https://your-sentry-dsn-here
METRICS_ENABLED=true
TRACING_ENABLED=false
# Optional: Set if using Jaeger
# JAEGER_ENDPOINT=http://localhost:14268/api/traces

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json
# Optional: Specify log file path
# LOG_FILE=logs/beq.log

# =============================================================================
# AI AGENT SETTINGS
# =============================================================================
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=60
ENABLE_AGENT_MEMORY=true
MEMORY_MAX_MESSAGES=50

# =============================================================================
# SCHEDULING OPTIMIZATION
# =============================================================================
SCHEDULING_LOOKAHEAD_DAYS=14
SCHEDULING_OPTIMIZATION_TIMEOUT=30
ENABLE_BACKGROUND_OPTIMIZATION=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_AI_SUGGESTIONS=true
ENABLE_AUTO_SCHEDULING=true
ENABLE_LEARNING_RECOMMENDATIONS=true
ENABLE_HEALTH_OPTIMIZATION=true

# =============================================================================
# API VERSIONING
# =============================================================================
API_VERSION=v1
DEPRECATION_WARNINGS=true

# =============================================================================
# TESTING
# =============================================================================
TESTING=false
# Optional: Test database URL
# TEST_DATABASE_URL=sqlite+aiosqlite:///./test.db
