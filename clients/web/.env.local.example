# BeQ Frontend Environment Configuration

# =============================================================================
# NEXT.JS SETTINGS
# =============================================================================
NEXT_PUBLIC_APP_NAME=BeQ
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_API_VERSION=v1

# =============================================================================
# SUPABASE SETTINGS
# =============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Supabase Service Role Key (for server-side operations)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# =============================================================================
# BACKEND API URLS
# =============================================================================
NEXT_PUBLIC_ORCHESTRATOR_API_URL=http://localhost:8000
NEXT_PUBLIC_SCHEDULER_API_URL=http://localhost:8001
NEXT_PUBLIC_RAG_API_URL=http://localhost:8002
NEXT_PUBLIC_CALENDAR_API_URL=http://localhost:8003

# =============================================================================
# FRONTEND SETTINGS
# =============================================================================
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PWA=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT Secret (should match backend)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================
# Optional: Analytics
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id-here

# Optional: Error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
NEXT_PUBLIC_DEBUG=true
