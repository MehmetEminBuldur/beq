# BeQ Project - Global Environment Configuration Example
# Copy this file to global.env and fill in your actual values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
ENVIRONMENT=development
NODE_ENV=development

# ============================================================================
# DATABASE CONFIGURATION  
# ============================================================================
DATABASE_URL=postgresql+asyncpg://beq:beq@localhost:5432/beq_orchestrator

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Backend service keys (same values as above)
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here

# ============================================================================
# AI/LLM CONFIGURATION
# ============================================================================
# OpenAI - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o

# OpenRouter (for open source models) - Get from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ============================================================================
# OAUTH CONFIGURATION
# ============================================================================
# Google Calendar Integration - Get from Google Cloud Console
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Microsoft Calendar Integration - Get from Azure Portal
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
# Generate using: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-in-production-use-32-char-hex
SESSION_SECRET=change-this-session-secret-in-production

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================================================
# SERVICE URLS
# ============================================================================
# Internal service communication
SCHEDULER_SERVICE_URL=http://localhost:8001
RAG_SERVICE_URL=http://localhost:8002
CALENDAR_SERVICE_URL=http://localhost:8003

# Frontend service URLs
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ORCHESTRATOR_API_URL=http://localhost:8000
NEXT_PUBLIC_SCHEDULER_API_URL=http://localhost:8001
NEXT_PUBLIC_RAG_API_URL=http://localhost:8002
NEXT_PUBLIC_CALENDAR_API_URL=http://localhost:8003
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Environment and site settings
NEXT_PUBLIC_ENVIRONMENT=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
# Service ports
PORT=3000
HOST=0.0.0.0

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# VECTOR DATABASE
# ============================================================================
QDRANT_URL=http://qdrant:6333

# ============================================================================
# LOGGING & MONITORING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false

# Metrics and tracing
METRICS_ENABLED=true
TRACING_ENABLED=false
JAEGER_ENDPOINT=

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AI_SUGGESTIONS=true
ENABLE_AUTO_SCHEDULING=true
ENABLE_LEARNING_RECOMMENDATIONS=true
ENABLE_HEALTH_OPTIMIZATION=true

# ============================================================================
# PERFORMANCE & LIMITS
# ============================================================================
# Agent configuration
AGENT_MAX_ITERATIONS=10
AGENT_TIMEOUT_SECONDS=60
ENABLE_AGENT_MEMORY=true
MEMORY_MAX_MESSAGES=50

# Scheduling optimization
SCHEDULING_LOOKAHEAD_DAYS=14
SCHEDULING_OPTIMIZATION_TIMEOUT=30
ENABLE_BACKGROUND_OPTIMIZATION=true

# Calendar sync settings
MAX_SYNC_RETRIES=3

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================
NEXT_TELEMETRY_DISABLED=1

# ============================================================================
# API VERSIONING
# ============================================================================
API_VERSION=v1
DEPRECATION_WARNINGS=true

# ============================================================================
# TESTING
# ============================================================================
TESTING=false
TEST_DATABASE_URL=
