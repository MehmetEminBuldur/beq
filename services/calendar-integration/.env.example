# BeQ Calendar Integration Service Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=BeQ Calendar Integration Service
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8003
RELOAD=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secure-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=postgresql+asyncpg://beq:beq@localhost:5432/beq_calendar
DATABASE_ECHO=true

# =============================================================================
# EXTERNAL SERVICE URLs
# =============================================================================
ORCHESTRATOR_SERVICE_URL=http://localhost:8000

# =============================================================================
# CALENDAR INTEGRATION SETTINGS
# =============================================================================
# Google Calendar API (if using Google Calendar)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:8003/auth/google/callback

# Outlook Calendar API (if using Outlook)
OUTLOOK_CLIENT_ID=your-outlook-client-id-here
OUTLOOK_CLIENT_SECRET=your-outlook-client-secret-here
OUTLOOK_REDIRECT_URI=http://localhost:8003/auth/outlook/callback

# Apple Calendar API (if using Apple Calendar)
APPLE_CLIENT_ID=your-apple-client-id-here
APPLE_CLIENT_SECRET=your-apple-client-secret-here
APPLE_REDIRECT_URI=http://localhost:8003/auth/apple/callback

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# =============================================================================
# TESTING
# =============================================================================
TESTING=false
