# BeQ RAG Recommender Service Environment Configuration

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME=BeQ RAG Recommender Service
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# SERVER SETTINGS
# =============================================================================
HOST=0.0.0.0
PORT=8002
RELOAD=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-super-secure-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# CORS SETTINGS
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=postgresql+asyncpg://beq:beq@localhost:5432/beq_rag
DATABASE_ECHO=true

# =============================================================================
# AI/LLM SETTINGS (OpenAI)
# =============================================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# LLM Configuration
MAX_TOKENS=4000
TEMPERATURE=0.7
TOP_P=0.9
FREQUENCY_PENALTY=0.1
PRESENCE_PENALTY=0.1

# =============================================================================
# EXTERNAL SERVICE URLs
# =============================================================================
ORCHESTRATOR_SERVICE_URL=http://localhost:8000

# =============================================================================
# RAG SETTINGS
# =============================================================================
EMBEDDING_MODEL=text-embedding-ada-002
VECTOR_DB_URL=postgresql+asyncpg://beq:beq@localhost:5432/beq_rag
MAX_DOCUMENTS_PER_QUERY=10
SIMILARITY_THRESHOLD=0.7

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# =============================================================================
# TESTING
# =============================================================================
TESTING=false
